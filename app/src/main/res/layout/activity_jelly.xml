<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JellyActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/jelly_cardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/jelly_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/my_white"
                android:paddingBottom="10dp"
                android:adjustViewBounds="true"
                />
            <TextView
                android:id="@+id/jelly_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipe_title"
                android:textColor="@color/my_pink"
                android:fontFamily="@font/alloyink"
                android:layout_alignBottom="@id/jelly_image"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginTop="7dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                />
            <TextView
                android:id="@+id/jelly_prep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prep_cook_time_2hrs"
                android:textColor="?android:textColorSecondary"
                android:layout_below="@id/jelly_title"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_prep_time"
                android:drawableLeft="@drawable/ic_prep_time"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                />

            <!--ADD A HORIZONTAL LINE-->
            <View
                android:id="@+id/jelly_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/jelly_prep"
                android:background="@color/css_grey"
                />

            <TextView
                android:id="@+id/jelly_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipe_short_description"
                android:textColor="@color/my_black"
                android:fontFamily="@font/badunicorn"
                android:textSize="20sp"
                android:layout_below="@id/jelly_divider"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_marginTop="3dp"
                android:textStyle="italic"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jelly_cardView"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"

        >
        <!-- <TextView
             android:id="@+id/donut_heading"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/how_to_prepare_a_donut"
             android:textStyle="bold"
             android:textColor="@color/grey_dark"
             />-->
        <TextView
            android:id="@+id/jelly_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ingredients"
            android:fontFamily="@font/alloyink"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textColor="@color/bright_tab"
            />
        <TextView
            android:id="@+id/jelly_ingredient1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gelatin"
            android:layout_below="@id/jelly_ingredients"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/my_black"
            />
        <TextView
            android:id="@+id/jelly_ingredient2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/honey"
            android:layout_below="@id/jelly_ingredient1"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/my_black"
            />
        <TextView
            android:id="@+id/jelly_ingredient3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/juice"
            android:layout_below="@id/jelly_ingredient2"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/my_black"
            />
        <TextView
            android:id="@+id/jelly_ingredient4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vanilla_extract"
            android:layout_below="@id/jelly_ingredient3"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/my_black"
            />
        <TextView
            android:id="@+id/jelly_ingredient5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/condensed_milk"
            android:layout_below="@id/jelly_ingredient4"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/my_black"
            />


    </RelativeLayout>

</RelativeLayout>